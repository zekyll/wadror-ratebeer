<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2>Members</h2>
<% if @beer_club.members.any? %>
  <ul>
  <% @beer_club.members.each do |m| %>
    <li><%= link_to m.username, m %></li>
  <% end %>
  </ul>
<% else %>
  <p>Club has no members.</p>
<% end %>


<%= link_to 'Edit', edit_beer_club_path(@beer_club) %> |
<%= link_to 'Back', beer_clubs_path %>
