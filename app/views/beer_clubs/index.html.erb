<h1>Beer clubs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <td><%= link_to('Edit', edit_beer_club_path(beer_club)) if current_user %></td>
        <td><%= link_to('Delete', beer_club, method: :delete, data: { confirm: 'Are you sure?' }) if current_user and current_user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer club', new_beer_club_path) if current_user %>
