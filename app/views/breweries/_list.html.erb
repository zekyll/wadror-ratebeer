<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"name") %></th>
    <th><%= link_to 'Year', breweries_path(order:"year") %></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
    <tr>
      <td><%= link_to brewery.name, brewery %></td>
      <td><%= brewery.year %></td>
      <td><%= link_to('Edit', edit_brewery_path(brewery), class:'btn btn-default btn-xs') if current_user %></td>
      <td><%= link_to('Delete', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-xs') if current_user and current_user.admin%></td>
    </tr>
  <% end %>
  </tbody>
</table>