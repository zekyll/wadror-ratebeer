<p id="notice"><%= notice %></p>

<h1><%= @user.username %></h1>

<h2>Ratings</h2>
<% if @user.ratings.any? %>
  <%= pluralize(@user.ratings.count, 'rating') %>. Average <%= @user.average_rating.round(2) %>.
  <ul>
    <% @user.ratings.each do |r| %>
      <li><%= r %> <%= link_to 'delete', r, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>
<% else %>
  <p>No ratings.</p>
<% end %>

<h2>Club memberships</h2>
<% if @user.memberships.any? %>
  <ul>
    <% @user.memberships.each do |m| %>
      <li><%= link_to m.beer_club, m.beer_club %> <%= link_to 'delete', m, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>
<% else %>
  <p>No club memberships.</p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
